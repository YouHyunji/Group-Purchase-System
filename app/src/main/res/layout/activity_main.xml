<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="bold"
    android:layout_width="match_parent"
    android:background="#EAEAEA"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="190dp"
        tools:layout_editor_absoluteY="50dp">

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#CBD5DD"
            android:text="로그아웃"
            android:textColor="#000000" />

        <Button
            android:id="@+id/Major_Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#CBD5DD"
            android:text="학과 선택"
            android:textColor="#000000" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>

    <!-- 버튼 추가 -->

    <!-- 게시글 추가 버튼 -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/AddPost_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_mode_edit_24"
        app:backgroundTint="#49B7C5"
        app:borderWidth="0dp"
        app:elevation="8dp" />

    <!-- 나의 게시글 버튼-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/MyPost_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        app:backgroundTint="#E6675E"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:srcCompat="@drawable/baseline_perm_identity_24" />

    <!-- 검색 버튼-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Search_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:backgroundTint="#F3DE2D"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:srcCompat="@drawable/baseline_search_24" />


    <!-- 메뉴 보기 버튼-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/MenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:backgroundTint="#8A67C8"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:srcCompat="@drawable/baseline_menu_24" />


</RelativeLayout>