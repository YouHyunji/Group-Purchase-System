<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="bold"
    android:layout_width="match_parent"
    android:background="#EAEAEA"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 게시글 내용 출력 공간 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="234dp"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <!-- 제목 공간 -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="371dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:hint="제목 출력란"
                android:textColor="#000000"
                android:textSize="25sp"
                android:inputType="text" />

            <!-- 게시글 사진, 모집인원, 참가하기 버튼 공간 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="161dp"
                android:layout_weight="0"
                android:orientation="horizontal">

                <!-- 게시글 사진 -->
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="150dp"
                    android:layout_height="121dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="0"
                    android:src="@drawable/main_logo"
                    android:text="그림 미리보기" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="모집인원:"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:typeface="monospace" />

                <!-- 모집인원 공간 -->
                <TextView
                    android:id="@+id/likesTextView"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="25sp"
                    android:ems="10"
                    android:inputType="text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="명"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:typeface="monospace" />

                <!-- 참가하기 버튼 -->
                <Button
                    android:id="@+id/likeButton"
                    android:layout_width="147dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-170dp"
                    android:layout_marginTop="80dp"
                    android:backgroundTint="#6200EE"
                    android:text="참가하기"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:text="nameTextView"
                android:textSize="30sp"
                android:typeface="monospace"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/viewsTextView"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:text="viewsTextView"
                android:typeface="monospace"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timestampTextView"
                android:layout_width="300dp"
                android:layout_height="44dp"
                android:text="timestampTextView"
                android:textSize="20sp"
                android:typeface="monospace"
                android:textStyle="bold" />

            <!-- 게시글 내용 공간 -->

            <TextView
                android:id="@+id/contentsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:scrollHorizontally="true"
                android:ems="10"
                android:hint="내용을 입력하시오"
                android:maxLines="5"
                android:textSize="30sp" />

            <Button
                android:id="@+id/backToMainButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Main"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="18dp"
                tools:layout_editor_absoluteY="16dp" />

        </LinearLayout>


    </LinearLayout>




</RelativeLayout>